{
    "Serilog": {
        "Using": [
            "Serilog.Enrichers.ClientInfo",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Seq"
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId",
            "WithClientIp",
            {
                "Name": "WithRequestHeader",
                "Args": {
                    "headerName": "User-Agent"
                }
            }
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "System": "Warning"
            }
        }
    },
    "AllowedHosts": "*"
}